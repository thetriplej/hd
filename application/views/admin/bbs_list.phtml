    function set_showDate(no){
        var update_date = $("#date"+no).val();
        var update_time = $("#time"+no).val();
        var show_date = update_date +" " + update_time;

        $.ajax({
            type:"POST",
            url:"/ajax/admin/show_date",
            data: {
                csrf_token: $('input[name=csrf_token]').val(),
                show_date: show_date,
                b_index: no,
            },
            success:function(data){
                if(data = "success"){
                    alert("수정되었습니다.")
                    location.reload();
                }else if(data = "fail"){
                    alert("실패하였습니다.");
                }

            }
        });
    }

